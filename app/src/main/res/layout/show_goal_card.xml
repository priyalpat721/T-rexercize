<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_card_layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/goal_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/goal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/done_box2"
        app:layout_constraintEnd_toStartOf="@+id/favorites2"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/done_box2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/goalBack"
        app:layout_constraintStart_toStartOf="@+id/goal_name2"
        app:layout_constraintTop_toBottomOf="@+id/goal_name2" />

    <CheckBox
        android:id="@+id/done_box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/done"
        app:layout_constraintBottom_toBottomOf="@+id/goalBack"
        app:layout_constraintStart_toStartOf="@+id/goalBack"
        app:layout_constraintTop_toTopOf="@+id/goalBack"
        app:layout_constraintVertical_bias="0.316"
        android:enabled="false"/>

    <CheckBox
        android:id="@+id/favorites2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/goal_name2"
        app:layout_constraintEnd_toEndOf="@+id/goalBack"
        app:layout_constraintTop_toTopOf="@+id/goal_name2"
        app:layout_constraintVertical_bias="0.448"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:text="@string/favorites"
        app:layout_constraintBottom_toBottomOf="@+id/goalBack"
        app:layout_constraintEnd_toEndOf="@+id/goalBack"
        app:layout_constraintTop_toBottomOf="@+id/favorites2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/goalBack"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/goal_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
